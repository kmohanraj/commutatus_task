<div class="table_invoice">
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr class="bg-primary">
        <th class="align_center">Reference Id</th>
        <th class="align_center">Expense Date</th>
        <th class='align_center'>Name</th>
        <th class='align_center'>Desc</th>
        <th class='align_center'>Finance Type</th>
        <th class='align_center'>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
      <tr>
        <td class="align_center">
          <%= expense.reference%>
        </td>
        <td class="align_center">
          <%= expense.expense_date %>
        </td>
        <td class="align_center">
          <%= expense.name %>
        </td>
        <td class="align_center">
          <%= expense.desc %>
        </td>
        <td class="align_center">
          <%= expense.category %>
        </td>
        <td class="align_center">
          <%= expense.amount %>
        </td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>
<div class="flickr_pagination pagination-margin">
  <%= will_paginate @expenses, container: false %>
</div>
