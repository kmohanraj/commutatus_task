<%= form_for (@expense), html: {class: 'finance_form'}, method: :post, remote: true do |f| %>
  

  <div class="form-group row">
    <%= f.label :name, "Customer Name:", class: "col-4 col-form-label" %>
    <div class="col-8">
      <%= f.text_field :name, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :desc, "Description:", class: "col-4 col-form-label" %>
    <div class="col-8">
      <%= f.text_field :desc, required: true, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group row">
   <%= f.label :category, "Category:", class: "col-4 col-form-label" %>
   <div class="col-8">
     <%= select_tag :category,  options_from_collection_for_select(Expense::ENUM_ENTITY, :last, :first ), { :prompt => "Select Status"} %>
   </div>
  </div>

  <div class="form-group row">
   <%= f.label :amount, "Amount:", class: "col-4 col-form-label" %>
   <div class="col-8">
     <%= f.number_field :amount, required: true, class: 'form-control', min: 0 %>
   </div>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary pull-right'  %>
  </div>

<% end %>